
<figure class="image">
  <img src="http://bevcooks.com/wp-content/uploads/2011/12/pizza9.jpg">
</figure>

<div id="center-tile" class="tile is-ancestor">
    <div class="tile is-parent">
      <article class="tile is-child notification is-primary">
        <p class="title">Search by Ingredients</p>
        <div class="content">
          <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
              <p> <%= e %></p>
            <% end %>
          <% end %>
        </div>
        <div class="content">
          <%= form_for @recipe, url:{:controller=>'recipes', :action=>'create_with_ingredients'}, html:{method:'post'} do |f| %>
            <%= f.text_field :name %>
            <%= f.text_field :image %>
            <%= f.text_field :source %>
            <%= f.submit "Search" %>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>
